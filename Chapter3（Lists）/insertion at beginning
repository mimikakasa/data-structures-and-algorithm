#include<iostream>
using namespace std;

//initialize list
struct node
{
	int data;
	node* next;
};
node* head = NULL;
node* current = NULL;

//display the list
void printList()
{
	node* p = head;
	cout << "[";

	//start from the beginning
	while (p!=NULL)
	{
		cout << " " << p->data << " ";
		p = p->next;
	}
	cout << "]";
}

//insertion at the beginning
void insertAtBegin(int data)
{
	//create a link
	node* lk = new node;
	lk->data = data;

	//point it to old first node
	lk->next = head;

	//point first to new first node
	head = lk;

}

int main()
{
	insertAtBegin(2);
	insertAtBegin(4);
	insertAtBegin(3);
	insertAtBegin(5);
	insertAtBegin(6);

	cout << "Linked list:";
	printList();


	system("pause");
	return 0;
}
